@model List<CRMSystem.Web.ViewModels.UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcı Listesi</h2>

<a href="/User/Create" class="btn btn-primary">Yeni Kullanıcı</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Rol</th>
            <th>Oluşturma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>@user.CreatedAt</td>
                <td>
                    <a href="/User/Edit/@user.Id" class="btn btn-sm btn-warning">Güncelle</a>
                    <a href="/User/Delete/@user.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
